<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="-1dp" android:right="-1dp" android:left="-1dp" android:top="-1dp">
        <shape>
            <solid android:color="#2196F3" />

            <stroke android:width="1dp"
                android:color="#186EB3"
                />

            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />

            <corners android:bottomRightRadius="50dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="0dp" android:topRightRadius="50dp"/>
        </shape>
    </item>
</layer-list>