<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reportMenuWindow"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="#64435463"
    android:layout_height="match_parent"
    tools:context=".Fragments.AnimalDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/roundedcontainer_animaldesc"
        android:orientation="vertical">


        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:cropToPadding="true"
            android:padding="5dp"
            app:srcCompat="@drawable/error_dog" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textViewDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrição"
                    android:lines="3"
                    android:maxLines="3" />

                <TextView
                    android:id="@+id/textViewAge2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Idade" />

                <TextView
                    android:id="@+id/textViewGender2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Género" />

                <TextView
                    android:id="@+id/textViewType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energia" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelugem" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tamanho" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>