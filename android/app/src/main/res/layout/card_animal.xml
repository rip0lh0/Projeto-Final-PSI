<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_animal_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/logomain" />

    <TextView
        android:id="@+id/text_animal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Do Animal" />

    <TextView
        android:id="@+id/text_animal_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Raça Do Animal" />

    <TextView
        android:id="@+id/text_animal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do Animal" />

    <Button
        android:id="@+id/btn_animal_adopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>